doctype 5
html
	head
		title Most awesome snake ever

		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='mobile-web-app-capable', content='yes')

		link(rel='stylesheet', href='/css/terminalControllerSnake.css')
		script(data-main='/js/terminalControllerSnake/start.js', src='/js/lib/require.js')

	body

	#preloader
		h1 loading...

	#controller.section
		h1 Touch to move!
		#marker
			.down.marker
			.move.marker

	#controller-finished.section
		h1 Game Over
		button.again Again!
		button.exit Exit!

	#presenter-waiting.section
		h2 Connected!
		p 
			| Grab your smartphone and visit 
			a.controllerUrl

	#presenter-game.section
		canvas

	#presenter-finished.section
		h1 Game Over